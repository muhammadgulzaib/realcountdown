<script>
    function checkout(amount, planDetails, messageId) {
        const stripe = Stripe('pk_test_51Kze91K4WqwChaQkjQmF8NOPXigDQWiLXoL4eidBK9s3FYwIdiNqEfCnFqgcveRDPmE5KqVPSlyFnGcbiDQXsY4S00xxm91IqJ');
        fetch("http://localhost:3500/agent/setpayment", {
            headers: {
                'Content-Type': 'application/json'
            },
            method: "POST",
            body: JSON.stringify(
                {
                    "product": {
                        "name": planDetails.planName,
                        "amount": amount,
                        "messages": planDetails.messages,
                        "quantity": 1
                    },
                    success_url: `./agent/promotional-plan-purchased/?planName=${planDetails.planName}&planPrice=${amount}&messages=${planDetails.messages}&messageId=${messageId}&messageRole=Seller`,
                    cancel_url: "./agent/payment-seller/" + messageId
                }
            )
        }).then(function (response) {
            return response.json();
        }).then(function (session) {
            console.log(session);
            return stripe.redirectToCheckout({sessionId: session.id});
        }).then(function (result) {
            if (result.error) {
                alert(result.error.message);
            }
        }).catch(function (error) {
            console.error("Error:", error);
        });
    }
